<fest:template xmlns:fest="http://fest.mail.ru" context_name = "json">
	<fieldset class="main">
		<h1 class="main__header">
			A GAME WHICH IS TOO CLOSE TO THE TOP OF THE EPICITY
		</h1>
		<hr class="main__hr" />
		<a href="#scores">
			<button class="main__element">HIGHSCORES</button>
		</a>
		<a href="#rooms">
			<button class="main__element">PLAY!</button>
		</a>
		<fest:choose>
			<fest:when test="json.isLoggedIn">
				<a href="#stats">
					<button class="main__element">PROFILE</button>
				</a>
				<a href="#main">
					<button class="main__element">LOG OUT</button>
				</a>
			</fest:when>
			<fest:otherwise>
				<a href="#login">
					<button class="main__element">LOG IN</button>
				</a>
			</fest:otherwise>
		</fest:choose>
	</fieldset>
</fest:template>
