<fest:template xmlns:fest="http://fest.mail.ru" context_name = "json">
    <fieldset class="balls-control">
        <div class="balls-control__spawn-one">
            <h3 class="balls-control__header">Spawn with Mouse</h3>
            <hr class="balls-control__hr" />
            <button class="balls-control__button balls-control__ball-spawn">Ball</button>
            <button class="balls-control__button balls-control__pacman-spawn">Pacman</button>
            <button class="balls-control__button balls-control__mouse">Reset</button>
        </div>
        <div class="balls-control__spawn-many">
            <h3 class="balls-control__header">Spawn Many</h3>
            <hr class="balls-control__hr" />
            <div class="balls-control__spawn-many__inner">
                <button class="balls-control__button balls-control__balls-spawn">Balls</button>
                <input type="range" class="balls-control__range balls-control__ball-size" min="10" max="40" step="1" value="15"></input>
            </div>
            <div>
                <button class="balls-control__button balls-control__pacmans-spawn">Pacmans</button>
                <input type="range" class="balls-control__range balls-control__pacman-size" min="15" max="70" step="1" value="20"></input>
            </div>
        </div>
        <div class="balls-control__physics">
            <h3 class="balls-control__header">Physics</h3>
            <hr class="balls-control__hr" />
            Elasticity: <input type="range" class="balls-control__range balls-control__elasticity" min="0" max="100" step="1" value="95"></input>
        </div>
    </fieldset>
</fest:template>
