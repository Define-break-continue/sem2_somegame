<fest:template xmlns:fest="http://fest.mail.ru">
    <form class="login-form" method="POST" action="#login">
        <input type="email" name="email" placeholder="E-mail" class="login-form__input"></input><br />
        <input type="password" name="password" placeholder="Password" class="login-form__input"></input><br />
        <input type="submit" text="Let's start!" class="login-form__button"></input><br />
        <p id="login-form__message"></p>
    </form>
</fest:template>
