<fest:template xmlns:fest="http://fest.mail.ru">
    <form class="login_form" method="POST" action="#login">
        <input type="email" name="email" placeholder="E-mail" class="login_form_input"></input><br />
        <input type="password" name="password" placeholder="Password" class="login_form_input"></input><br />
        <input type="submit" text="Let's start!" class="js-login-form-submit login_form_button"></input><br />
        <p id="login_message"></p>
    </form>
</fest:template>
